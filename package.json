{
  "name": "astro-edgekits-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdgeKits/astro-edgekits-core.git"
  },
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "astro": "astro",
    "setup": "node scripts/setup.mjs",
    "dev": "wrangler types && astro dev",
    "build": "wrangler types && astro build",
    "preview": "astro build && wrangler dev",
    "deploy": "astro build && wrangler deploy",
    "typegen": "wrangler types",
    "i18n:bundle": "tsx scripts/bundle-translations.ts",
    "i18n:bundle:fallbacks": "tsx scripts/bundle-translations.ts --fallbacks",
    "i18n:seed": "npm run i18n:bundle && wrangler kv bulk put i18n-data.json --local --namespace-id=70224705d49a4d5ea833779c9c22ef67",
    "i18n:seed:fallbacks": "npm run i18n:bundle:fallbacks && wrangler kv bulk put i18n-data.json --local --namespace-id=70224705d49a4d5ea833779c9c22ef67",
    "i18n:migrate": "npm run i18n:bundle && wrangler kv bulk put i18n-data.json --remote --namespace-id=70224705d49a4d5ea833779c9c22ef67",
    "i18n:migrate:fallbacks": "npm run i18n:bundle:fallbacks && wrangler kv bulk put i18n-data.json --remote --namespace-id=70224705d49a4d5ea833779c9c22ef67"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "astro": "^5.15.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "react-hook-form": "^7.68.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "miniflare": "^4.20251109.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "wrangler": "^4.54.0"
  }
}
